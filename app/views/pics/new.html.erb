
<div class="boxy span6 offset3 text-center">
	<h2>Upload your image</h2>
	<%= simple_form_for @pic do |f| %>

		<%= f.input :lesson, label: 'Enter Lesson Number' %>
		<br/>
		<%= f.input :emotion, label: 'Tell me how you felt', placeholder: 'e.g., happy, stoked, great, fantastic, etc.' %>
		<br/>
		<%= f.input :learned, label: 'What did you learn?', placeholder: 'e.g., HTML5, CSS3, Ruby, Rails, Bootstrap' %>
		<br/>
		<%= f.input :image, label: 'Upload your image', as: :file %>
		<br/>

		<%= submit_tag 'Save', :class => 'btn btn-warning btn-large'%>

	<% end %>
</div>

